<%- include('D:/Code/College Projects/Web 2/Website_Layout/views/partials/header.ejs') -%>

<div class="ui main text container">
    <div class="ui huge header">My Personal Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"> <%= blog.title %></a>
                        <div class="meta">
                            <span>
                                <%= blog.created.toDateString() %>
                            </span>
                        </div>
                        <div class="description">
                            <p><%= blog.body.substring(0, 100) %>... </p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="chevron right icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

